define pers_2 = Character('Тун Тун Тун Сахур', color="#d39b03e1")
define pers_3 = Character('Глорбо Футодрило', color="#5cc903")
define pers_4 = Character('?????', color="#f0f1ee")

#Звуки и музыка
define audio.musgood = "audio/muz1.mp3"
define audio.musnoch = "audio/muz.noch.mp3"
define audio.mushorr = "audio/muzhorr1.mp3"
define audio.muskrik = "sound/muz.krik.mp3"
